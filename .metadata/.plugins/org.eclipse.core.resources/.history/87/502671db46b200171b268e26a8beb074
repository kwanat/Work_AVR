// Created by: KAMIL WANAT
// uC: Attiny 24
// dostêpne porty: PA0-7, PB0-3
// port przycisku: PB0
// porty wyjsciowe: PA0-7



#include <avr/io.h>
# include <util/delay.h>

//makra uzytkownika
#define il_migniec 8
#define czas_migniecia 40
#define czas_calosci 11

//makra sprzetowe
#define LED1 (1<<PA0)
#define LED2 (1<<PA1)
#define KEY (1<<PB0)
#define PORTLED PORTA
#define DDRLED DDRA
#define PORTLED1 PORTB
#define DDRLED1 DDRB
#define PINKEY PINB
#define PORTKEY PORTB
int main()
{
	uint8_t key_lock;
	DDRLED |=LED1|LED2;
	PORTKEY |= KEY;
	_delay_ms(10);
	while(1)
	{
		if( !key_lock && !(PINKEY & KEY))
		{
			key_lock=1;
			//reakcja na wcisniecie klawisza
			for(int j=0;j<czas_calosci;j++)
			{
				PORTLED|=(LED1);
				for(int i=0;i<il_migniec;i++)
				{
					PORTLED ^= (LED1);
					_delay_ms(czas_migniecia);
				}
				PORTLED&=(!LED1);
				PORTLED|=(LED2);
				for(int i=0;i<il_migniec;i++)
				{
					PORTLED ^= (LED2);
					_delay_ms(czas_migniecia);
				}
				PORTLED&=(!LED2);
			}
		}else if(key_lock && (PINKEY &KEY)) key_lock++;
	}
	return 0;
}
